<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flamelayout_list_theloai_theo_chude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:id="@+id/img_theloai_theo_chude"
                android:layout_width="180dp"
                android:layout_height="180dp" />
        </FrameLayout>
        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Ten the loai theo chu de"
            android:maxWidth="200dp"
            android:lines="2"
            android:gravity="left"
            android:ellipsize="end"
            android:id="@+id/txt_ten_theloai_theo_chude"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:text="Ten ca si"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/txt_casi_theloai_theo_chude"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>